    <%= stylesheet_link_tag "/deveal/css/deck/theme-font/#{@deck.theme_font}", media: 'all', 'data-turbolinks-track' => true %>
<% end %>
<%= stylesheet_link_tag '/deveal/css/deck/deck', media: 'all', 'data-turbolinks-track' => true %>